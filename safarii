  <script>
    // üîê CHANGE THIS PASSWORD IF YOU WANT
    const SECRET_PASSWORD = "parv-only";

    const lockedCard = document.getElementById("lockedCard");
    const loveCard = document.getElementById("loveCard");
    const passwordInput = document.getElementById("passwordInput");
    const unlockBtn = document.getElementById("unlockBtn");

    const messageBox = document.getElementById("messageBox");
    const noteBtn = document.getElementById("noteBtn");
    const surpriseBtn = document.getElementById("surpriseBtn");
    const fillBtn = document.getElementById("fillBtn");

    const daysText = document.getElementById("daysText");
    const meterFill = document.getElementById("meterFill");
    const meterPercent = document.getElementById("meterPercent");
    const meterCaption = document.getElementById("meterCaption");

    const loveMessages = [
      "Hi Parv, just in case you forgot: I love you a lot. üíó",
      "Reminder: you‚Äôre doing so much better than you think you are.",
      "You make life softer and safer for me, even on chat or call. ü´Ç",
      "Proud of you for existing, not just achieving things. ‚ú®",
      "If hugs were code, I‚Äôd be an infinite loop around you.",
      "You + me = my favourite thing to overthink about (in a good way).",
      "Whatever today was like, I‚Äôm always on your side. Always.",
      "You‚Äôre my calm place in the middle of everything messy. üåô",
      "The world is less scary because you‚Äôre in mine. üçÄ",
      "Plot twist: you were the comfort I didn‚Äôt know I needed. üíå"
    ];

    // Calculate days since 12 Dec 2023
    function updateDaysTogether() {
      const start = new Date(2023, 11, 12); // month is 0-based: 11 = December
      const today = new Date();
      const diffMs = today - start;
      const days = Math.floor(diffMs / (1000 * 60 * 60 * 24));

      if (days <= 0) {
        daysText.textContent = "Our story starts today ‚ú®";
      } else {
        daysText.textContent = `We‚Äôve been us for ${days} days`;
      }
    }

    function unlockIfValid() {
      const entered = passwordInput.value.trim();
      if (!entered) return;

      if (entered === SECRET_PASSWORD) {
        // Switch to love mode
        document.body.classList.add("love-mode");
        lockedCard.classList.add("hidden");
        loveCard.classList.remove("hidden");
        loveCard.classList.add("love-mode");
        updateDaysTogether();
      } else {
        passwordInput.value = "";
        passwordInput.placeholder = "Wrong key";
      }
    }

    unlockBtn.addEventListener("click", unlockIfValid);
    passwordInput.addEventListener("keydown", (e) => {
      if (e.key === "Enter") {
        unlockIfValid();
      }
    });

    // Love notes
    noteBtn.addEventListener("click", () => {
      const index = Math.floor(Math.random() * loveMessages.length);
      messageBox.textContent = loveMessages[index];
    });

    // Tiny surprise
    surpriseBtn.addEventListener("click", () => {
      const msg =
        "My dearest Parv,\n\n" +
        "This is your tiny secret corner of the internet where\n" +
        "I get to remind you of this: you are loved, you are enough,\n" +
        "and I‚Äôm so, so glad it‚Äôs you.\n\n" +
        "‚Äì Ritu üíó";
      alert(msg);
    });

    // Love meter animation
    let meterTimer = null;

    fillBtn.addEventListener("click", () => {
      if (meterTimer) {
        clearInterval(meterTimer);
      }
      let value = 0;
      meterCaption.textContent = "";
      meterFill.style.width = "0%";
      meterPercent.textContent = "0%";

      meterTimer = setInterval(() => {
        if (value >= 100) {
          clearInterval(meterTimer);
          meterPercent.textContent = "‚àû%";
          meterCaption.textContent = "Accurate reading: off the charts for you, Parv.";
          return;
        }
        value += 3;
        if (value > 100) value = 100;
        meterFill.style.width = value + "%";
        meterPercent.textContent = value + "%";
      }, 40);
    });
  </script>
